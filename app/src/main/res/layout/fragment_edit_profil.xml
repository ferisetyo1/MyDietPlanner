<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="Update Profil"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:fontFamily="@font/cabin_bold"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/title_lengkapi"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/user"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/black"
            app:civ_circle_background_color="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Nama"/>

            <EditText
                android:id="@+id/et_nama"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:background="@drawable/background_btn_logout"
                android:inputType="text"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Bio"/>

            <EditText
                android:id="@+id/et_bio"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:background="@drawable/background_btn_logout"
                android:inputType="text"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Alamat"/>

            <EditText
                android:id="@+id/et_alamat"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:background="@drawable/background_btn_logout"
                android:inputType="text"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_telp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="No. Telepon"/>

            <EditText
                android:id="@+id/et_telp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:background="@drawable/background_btn_logout"
                android:inputType="number"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_umur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Umur"/>

            <EditText
                android:id="@+id/et_umur"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:background="@drawable/background_btn_logout"
                android:inputType="number"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_berat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Berat"/>

            <EditText
                android:id="@+id/et_berat"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:background="@drawable/background_btn_logout"
                android:inputType="number"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tinggi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Tinggi"/>

            <EditText
                android:id="@+id/et_tinggi"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:background="@drawable/background_btn_logout"
                android:inputType="number"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_gradient"
            android:text="Update"
            android:textSize="15sp"
            android:textColor="@color/white"
            />

    </LinearLayout>

</ScrollView>